@model NewShopNowBL2.Models.tblStudent

@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Add User</h4>
    <hr class="my-0" />
    <div class="card-body">

        @using (Html.BeginForm("AddEditStudent", "Student", FormMethod.Post, new { id = "userForm" }))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="mb-3 col-md-6">
                    @Html.Label("StudentName", "Student Name", new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="mb-3 col-md-6">
                    @Html.Label("Course", "Course", new { @class = "form-label" })
                    @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>

                <div class="mb-3 col-md-6">
                    @Html.Label("College", "College", new { @class = "form-label" })
                    @Html.EditorFor(model => model.College, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Save changes</button>
                <button type="reset" class="btn btn-outline-secondary">Cancel</button>
            </div>
        }
    </div>
</div>

