@model IEnumerable<NewShopNowBL2.Models.tblStudent>
@{
    ViewBag.Title = "ListStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Student List</h4>
        @Html.ActionLink("Add Student", "AddStudent", "Student", null, new { @class = "btn btn-primary" })
        <br /><br />
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Students</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th> ID</th>
                            <th> Name</th>
                            <th>Course</th>
                            <th>College</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.StudentName</td>
                                <td>@item.Course</td>
                                <td>@item.College</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href=@Url.Action("GetDetailsById","Student",new {id=item.Id})><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                            <a class="dropdown-item" href=@Url.Action("Delete","Student",new {id=item.Id})
                                               new { onclick="return confirm('Are you sure want to delete?');"><i class="bx bx-trash me-1"></i>Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



