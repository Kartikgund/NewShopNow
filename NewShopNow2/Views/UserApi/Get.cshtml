@model IEnumerable<NewShopNowBL2.Models.tblUser>
@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Cashier List</h4>
        @Html.ActionLink("Add User", "AddUser", "UserApi", null, new { @class = "btn btn-primary" })

        @Html.ActionLink("Export to Excel", "Export", "Home", null, new { @class = "btn btn-primary" })
        <br /><br />
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Cashiers</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email ID</th>
                            <th>Mobile No</th>
                            <th>City</th>
                            <th>Store ID</th>
                            <th>Role Id</th>
                            <th>Created By</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.UserName</strong></td>
                                <td>@item.EmailId</td>
                                <td>@item.MobileNo</td>
                                <td>@item.City</td>
                                <td>@item.StoreId</td>
                                <td>@item.RoleId</td>
                                <td>@item.CreatedBy</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/UserApi/UserDetails/@item.Id"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                                            <a class="dropdown-item" href=@Url.Action("Delete","UserApi",new {id=item.Id})
                                               new { onclick="return confirm('Are you sure want to delete?');"><i class="bx bx-trash me-1"></i>Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

