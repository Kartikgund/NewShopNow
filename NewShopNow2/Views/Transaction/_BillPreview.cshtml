@model NewShopNow2.ViewModel.TransactionModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">

            <div class="layout-page">
                <div class="content-wrapper">
                    <div class="col-md-12 mb-4">
                        <div class="card">
                            <center>
                                <h1 class="card-header">Invoice</h1>
                            </center>
                            <div class="card-body">
                                <div class="clearfix">
                                    <h4 class="pull-left">Invoice No :@Model.objTransaction.InvoiceNo</h4>
                                    <h4 class="pull-right">Invoice Date :@Convert.ToDateTime(Model.objTransaction.InvoiceDate.Date).ToString("dd/MM/yyyy")</h4>
                                </div>
                                <div class="clearfix">
                                    <h4 class="pull-left">Customer Name :@Model.objCustmore.CustomerName</h4>
                                    <h4 class="pull-right">Mobile No  :@Model.objCustmore.MobileNo</h4>

                                </div>
                            </div>
                            <br />
                            <div class="container-xxl flex-grow-1 container-p-y">

                                <div class="table-responsive text-nowrap">
                                    <table class="table">

                                        <tr>
                                            <th>Product ID</th>
                                            <th>Product Name</th>
                                            <th>Quantity</th>
                                            <th>Price</th>

                                        </tr>
                                        <tbody class="table-border-bottom-0">
                                            @foreach (var item in Model.lstItems)
                                            {
                                                <tr>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.tblStock.ProductName</strong></td>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Qty</strong></td>
                                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Price</strong></td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                            <br />
                            <div class="card-body">
                                <div class="clearfix">
                                    <h4 class="pull-right">Total Discount  : @Model.objTransaction.TotalDiscount</h4>
                                </div>
                                <div class="clearfix">
                                    <h4 class="pull-right">Total GST  : @Model.objTransaction.GST</h4>
                                </div>
                                <div class="clearfix">
                                    <h4 class="pull-right">Total Amount  : @Model.objTransaction.InvoiceAmount</h4>
                                </div>
                                @if (string.IsNullOrEmpty(Convert.ToString(ViewBag.Hide)))
                                {

                                    <a href=@Url.Action("PrintInvoice", "Transaction", new { @InvoiceNo = Model.objTransaction.InvoiceNo,@receiver=ViewBag.receiver })>Print</a>
                                }
                                else
                                {
                                    Layout = null;
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</html>